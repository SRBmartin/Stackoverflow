<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="StackOverflowService.Cloud" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2015-04.2.6">
  <WebRole name="StackOverflowService.WebRole" vmsize="Standard_D1_v2">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="WebApi" endpointName="WebApi" />
        </Bindings>
      </Site>
    </Sites>
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="WebApi" protocol="http" port="8080" />
    </Endpoints>
  </WebRole>
  <WorkerRole name="NotificationService" vmsize="Standard_D1_v2">
    <ConfigurationSettings>
      <Setting name="StorageConnectionString" />
    </ConfigurationSettings>
	  <Endpoints>
		  <InputEndpoint name="Health" protocol="http" port="8081" />
	  </Endpoints>
  </WorkerRole>
</ServiceDefinition>